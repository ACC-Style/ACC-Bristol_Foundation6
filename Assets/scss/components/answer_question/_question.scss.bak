.label-holder{margin-bottom: .5rem;}
label,.label{
	@extend %h4;
	position: relative;
	background-color:transparent;
	color:fontcolor($black);
	white-space: normal;
	padding: 0 .5rem 0 0;
	.text{padding-right:1rem; line-height: 1.2em;}
	.error &{color:fontcolor($warning-color);}
	.warning &{color:fontcolor($alert-color);}
}

.input-holder{
	margin-bottom: .75rem;
	.input-space{  
		padding-left: 0;
	}
}
.input-space a.button, .input-space button{
	padding-top: 8px;
  	padding-bottom: 8px;
  	i{margin-right: .2rem;}
}
[class*="input-space"] + [class*="input-space"]:last-child{
	padding-right:0;
}
.error,.data,.alert,.warning{
	textarea,select,input{ margin-bottom: 0} 
}
textarea,select,input{
	.error &{border-color:$warning-color;}
	.alert &,.warning &{border-color:$alert-color;}
} 

input[type="checkbox"], input[type="radio"]{
	margin:.55em .5em;
	text-align: center;
	position: absolute;
	display: inline-block;
	vertical-align: middle;
	+.text{
		padding-left: 2em;
		display: inline-block;
		padding-top: .5em;
		padding-bottom: .5em;}
}




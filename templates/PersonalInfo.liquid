<div class="row group-divide text-center">
	    <div class="content-padding">
      <h4>Is your Personal Information complete and up to date?</h4>
      <a href="" class="disabled button"><i class="fa fa-holder"></i> Yes, Continue with Application</a>
    </div>
</div>
<script>
    function residentSlide(e){
        e.preventDefault();
        $('#residentQuestions').slideToggle();
        ($('#profType').val()=="")?$('#profType').val('Resident'):$('#profType').val('');
        

    }
    function addressSlide(e){
        e.preventDefault();
        $('#addAddress,#addAddressButton').slideToggle();
        

    }
    function addressSave(e){
        e.preventDefault();
        $('#addAddress,#addAddressButton').slideToggle();
        $( "#addressRender" ).clone().appendTo( ".repeater" );
    }
</script>

{% extends 'layouts/admin-layout' %}
{% block content %}

<div class="page paper-page">
	<div class="page-wrapper " >
		{% comment %}
			<div class="row">
				<div class="column small-12">
					{% include "elements/page-message-deadline" %}
				</div>
			</div>
			<div class="row section-padding">
				<div class="column small-12">
					{% include "elements/page-message-missing-data" %}
				</div>
			</div>
		{% endcomment %}
		<div class="row">
			<div class="column">
				<h1>Applications <a href="admin-applications.html" class="button small secondary float-right">Filter</a></h1>

			</div>
		</div>
		<div class="row">
			<div class="callout info">
				<h3>Filters &amp; Sorting</h3>
				<div class="row">
					<div class="column small-6 medium-4 large-3">
						<div class="switch-input-space">
						  <div class="switch checkbox tiny">
						    <input class="switch-input" id="yes-no-1" type="checkbox" name="exampleSwitch" checked>
						    <label class="switch-paddle" for="yes-no-1">
						      <span class="show-for-sr">Do you like me?</span>
						      <span class="switch-active" aria-hidden="true"><i class="fa fa-holder"></i></span>
						      <span class="switch-inactive" aria-hidden="true"><i class="fa fa-holder"></i></span>
						    </label>
						  </div>
						  <label class="switch-value" for="yes-no-1">Show Dates</label>
						</div>
					</div>
					<div class="column small-6 medium-4 large-3">
						<div class="switch-input-space">
						  <div class="switch checkbox tiny">
						    <input class="switch-input" id="yes-no-1" type="checkbox" name="exampleSwitch">
						    <label class="switch-paddle" for="yes-no-1">
						      <span class="show-for-sr">Do you like me?</span>
						      <span class="switch-active" aria-hidden="true"><i class="fa fa-holder"></i></span>
						      <span class="switch-inactive" aria-hidden="true"><i class="fa fa-holder"></i></span>
						    </label>
						  </div>
						  <label class="switch-value" for="yes-no-1">Hide Non Nominated Applications</label>
						</div>
					</div>
					<div class="column small-6 medium-4 large-3">
						<div class="switch-input-space">
						  <div class="switch checkbox tiny">
						    <input class="switch-input" id="yes-no-1" type="checkbox" name="exampleSwitch">
						    <label class="switch-paddle" for="yes-no-1">
						      <span class="show-for-sr">Do you like me?</span>
						      <span class="switch-active" aria-hidden="true"><i class="fa fa-holder"></i></span>
						      <span class="switch-inactive" aria-hidden="true"><i class="fa fa-holder"></i></span>
						    </label>
						  </div>
						  <label class="switch-value" for="yes-no-1">Hide No Letters</label>
						</div>
					</div>
					<div class="column small-6 medium-4 large-3">
						<div class="switch-input-space">
						  <div class="switch checkbox tiny">
						    <input class="switch-input" id="yes-no-1" type="checkbox" name="exampleSwitch">
						    <label class="switch-paddle" for="yes-no-1">
						      <span class="show-for-sr">Do you like me?</span>
						      <span class="switch-active" aria-hidden="true"><i class="fa fa-holder"></i></span>
						      <span class="switch-inactive" aria-hidden="true"><i class="fa fa-holder"></i></span>
						    </label>
						  </div>
						  <label class="switch-value" for="yes-no-1">Other Dates</label>
						</div>
					</div>
				</div>
			</div>			
		</div>
		<div class="row">
			<div class="card">
				{% include 'admin/elements/admin-table-search-bar' %}
				<table id="application" class="table banded desaturate">
					{% include "admin/elements/app-thead" %}
					<tbody id="Submitted">
						<tr class="seperator info">
							<td colspan="9">Submitted <a href="	" class="float-right">hide section <i class="fa fa-eye"></i></a></td>
						</tr>{% include 'admin/elements/application-rows' %}
					</tbody><tbody id="Draft">
						<tr class="seperator disabled">
							<td colspan="9">Started/Draft <a href="	" class="float-right">hide section <i class="fa fa-eye"></i></a></td>
						</tr>{% include 'admin/elements/application-rows' %}
					</tbody><tbody id="Revisions">
						<tr class="seperator warning">
							<td colspan="9">Pending Revision <a href="	" class="float-right">hide section <i class="fa fa-eye"></i></a></td>
						</tr>{% include 'admin/elements/application-rows' %}						
					</tbody><tbody id="Reviewed">	
						<tr class="seperator success">
							<td colspan="9">Reviewed <a href="	" class="float-right">hide section <i class="fa fa-eye"></i></a></td>
						</tr>{% include 'admin/elements/application-rows' %}
					</tbody><tbody id="Rejected">
						<tr class="seperator error">
							<td colspan="9">Rejected <a href="	" class="float-right">hide section <i class="fa fa-eye"></i></a></td>
						</tr>						
						{% include 'admin/elements/application-rows' %}
					</tbody>
				</table>
				{% include "elements/card-pagination-bottom"%}
			</div>
		</div>
	</div>
</div>
<style>
	#Submitted .reviewed,#Draft .reviewed,#Draft .submitted,#Revisions .submitted, #Draft .reviewed{ display:none; }

</style>
{% endblock %}

{% comment %}<img src="output/abstract-q-c-640-480-1.jpg">{% endcomment %}
{% extends 'layouts/admin-layout' %} {% block content %}
    <div class="page-header section-padding">
        <div class="row">
            <div class="column">
                <h1> <i class="fa fa-question-circle" aria-hidden="true"></i>
                Questions Manager <span class="seperator"> \ </span><span>Global Questions</small>
                </h1>
                <div class="section-padding">
                    <a class="button tiny radius " href="admin-questions.html">Global Questions</a>

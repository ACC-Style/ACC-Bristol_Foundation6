{% extends 'layouts/layout-active-application' %}

{% block message-holder %}
    <div class="page-message callout success">
    <a class="close-bar">
        <span class="close-button">
            <i aria-hidden="true" class="fa fa-times">
            </i> Close
        </span>
    </a>
    <div class="message-container">
        <div class="icon-holder">
            <span class="fa-stack fa-lg">
                <i class="fa fa-square-o fa-stack-2x">
                </i>
                <i class="fa fa-hourglass-start fa-stack-1x">
                </i>
            </span>
        </div>
        <div class="message-holder">
            <h3 class="">
                Committee Nomination Season is Now Open!
            </h3>
            <p>
                The {Committee Name} Committee(s) are now accepting application.  Make sure you have submitted your active application before the deadline.
            </p>
            <b>
                Committee {Committee Type} Deadline: {Date}
            </b>
        </div>
    </div>
</div>
{% endblock %}

{% block page-name %}
    Dashboard
{% endblock %}

{% block content %}
<div class="card">


        <div class="row">
            <div class="column">
            <h2 class="with-underline">
                Nominations
            </h2>
            <div class="callout disabled clearfix">
                <div class="subtle">
                    you have no pending nominations.
                    <a class="button secondary float-right" href="user-nominate-member.html">
                        Nominate a Member
                    </a>
                </div>
            </div>
        </div>
        </div>
    <div class="row">
        <div class="column">
            <h2 class="with-underline">
                Reference Requests
            </h2>
            <div class="callout disabled clearfix">
                <div class="subtle">
                    You have no pending requests.
                    <a class="button float-right disabled" href="">
                        Respond to Requests
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block active-application %} 

    <div class="card content-padding">
       <div class="warning colored-paper">
           <div class="row coloumn"> <h4 class="text-center">No Active Applications</h4></div>
       </div>
        
        <p class="section-padding"><strong>Active Applications</strong> allow you to express intrest in up to 6 committees during active seasons.  You will have access to interested committees after you have completed and saved the application for this season. </p>
        <a href="application-to-committee.html" class="button expanded success">Start Application</a>
    </div>
    <br>
    <div class="card ghost">
        <div class="colored-paper info">
            <h4 class="text-center"> <i class="fa fa-lock"></i> Committees of Interest <i class="fa fa-lock"></i> 
            <div class="sub-line">This area is disabled because you have not finished your active application</div>

            </h4>
        </div>
    </div>

{% endblock %}

